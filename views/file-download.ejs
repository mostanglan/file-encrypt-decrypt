<%- include('header-nav-layout.ejs') %>
<h1 class="title-header"><%= type=='decrypt' ? 'Decrypted' : 'Encrypted' %> File Download</h1>

<div class="container">
    <div class="download-container">
        <img src="/image/<%= type=='decrypt' ? 'decrypt.svg' : 'encrypt.svg' %>" width="130px">
        <p style="text-align: center;"><%= filename %></p>
        <% if(type=='decrypt'){ %>
            <a href="/decrypt/download/<%= filename %>">
        <% } else { %>
            <a href="/download/<%= filename %>">
        <% } %>
            <button>Download</button>
        </a>
    </div>
</div>

</body>
</html>